@{
    ViewData["Title"] = "Contacto";
}

<div class="d-flex justify-content-center align-items-center" style="margin-top:70px; background-color:black; height:125px;">
    <h2 class="text-light" style="margin-top:15px;">CONTACTO</h2>
</div>   

<div class="flex-container mt-5" style="padding-left: 15%; padding-right: 15%; margin-bottom:100px;">
    <div class="flex-item2" style="padding-right: 80px;">
        <img src="/Imagenes/logo.png" alt="" class="" style="width:20%;">
        <h5 class="" style="margin-top: 22%;">CONSULTAS DE LA TIENDA</h5>
        <p class="mt-3">Contacta con nosotros a través de nuestro sitio web. Mandanos dudas sobre nuestros productos, nuestra disponibilidad, y sobre las fechas de envíos. La respuesta a consultas llega por el email indicado.</p>
    </div>
    <div class="flex-item2">
        <form method="post" action='@Url.Action("GuardarConsulta", "Home")' enctype="multipart/form-data"  style="padding-left: 50px;">
            <div class="form-group">
                <label for="exampleInputEmail1">NOMBRE <span style="color: gold;">*</span></label>
                <br>
                <input type="text" class="input-form" id="exampleInputEmail1" aria-describedby="emailHelp" name="NombreUsuario" autocomplete="off" required>
                <br>
                <small id="emailHelp" class="form-text text-muted">Nunca compartiremos tu información personal</small>
            </div>
            <div class="form-group mt-4">
                <label for="exampleInputEmail1">EMAIL <span style="color: gold;">*</span></label>
                <br>
                <input type="email" class="input-form" id="exampleInputEmail1" aria-describedby="emailHelp" name="EmailUsuario" autocomplete="off" required>
            </div>
            <div class="form-group mt-4">
                <label for="exampleInputPassword1">CONSULTA <span style="color: gold;">*</span></label>
                <br>
                <textarea class="input-form" id="exampleFormControlTextarea1" name="DescripcionConsulta" rows="3" style="height: 150px;" autocomplete="off" required></textarea>
                
            </div>
            
            <button type="submit" class="mt-3 agregarCarrito btn btn-outline-secondary">ENVIAR</button>
        </form>
    </div>
</div>
